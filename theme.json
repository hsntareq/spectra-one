{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "name": "Primary",
          "color": "#4F46E5",
          "slug": "primary"
        },
        {
          "name": "Secondary",
          "color": "#6366F1",
          "slug": "secondary"
        },
        {
          "name": "Foreground",
          "color": "#111827",
          "slug": "foreground"
        },
        {
          "name": "Heading",
          "color": "#1F2937",
          "slug": "heading"
        },
        {
          "name": "Body",
          "color": "#4B5563",
          "slug": "body"
        },
        {
          "name": "Neutral",
          "color": "#9CA3AF",
          "slug": "neutral"
        },
        {
          "name": "Outline",
          "color": "#E5E7EB",
          "slug": "outline"
        },
        {
          "name": "Surface",
          "color": "#F9FAFB",
          "slug": "surface"
        },
        {
          "name": "Background",
          "color": "#FFFFFF",
          "slug": "background"
        },
        {
          "name": "Transparent",
          "color": "transparent",
          "slug": "transparent"
        },
        {
          "name": "Current Color",
          "color": "currentColor",
          "slug": "currentColor"
        },
        {
          "name": "Inherit",
          "color": "inherit",
          "slug": "inherit"
        }
      ]
    },
    "appearanceTools": true,
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": [
        "%",
        "px",
        "em",
        "rem",
        "vh",
        "vw"
      ],
      "customSpacingSize": true,
      "spacingScale": {
        "operator": "*",
        "increment": 0,
        "steps": 0,
        "mediumStep": 0,
        "unit": "px"
      },
      "spacingSizes": [
        {
          "name": "XX Small",
          "slug": "xxs",
          "size": "calc(var(--wp--preset--font-size--regular,1rem)/4)"
        },
        {
          "name": "X Small",
          "slug": "xs",
          "size": "calc(var(--wp--preset--font-size--regular,1rem)/2)"
        },
        {
          "name": "Small",
          "slug": "sm",
          "size": "var(--wp--preset--font-size--regular,1rem)"
        },
        {
          "name": "Medium",
          "slug": "md",
          "size": "calc(var(--wp--preset--font-size--regular,1rem)*2)"
        },
        {
          "name": "Large",
          "slug": "lg",
          "size": "calc(var(--wp--preset--font-size--regular,1rem)*4)"
        },
        {
          "name": "X Large",
          "slug": "xl",
          "size": "calc(var(--wp--preset--font-size--regular,1rem)*8)"
        },
        {
          "name": "XX Large",
          "slug": "xxl",
          "size": "calc(var(--wp--preset--font-size--regular,1rem)*16)"
        }
      ]
    },
    "typography": {
      "lineHeight": true,
      "customFontSize": true,
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontStretch": "",
              "fontStyle": "normal",
              "fontWeight": "100",
              "src": [
                "file:./assets/fonts/inter/Inter-Thin.woff2"
              ]
            },
            {
              "fontFamily": "Inter",
              "fontStretch": "",
              "fontStyle": "normal",
              "fontWeight": "300",
              "src": [
                "file:./assets/fonts/inter/Inter-Light.woff2"
              ]
            },
            {
              "fontFamily": "Inter",
              "fontStretch": "",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": [
                "file:./assets/fonts/inter/Inter-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Inter",
              "fontStretch": "",
              "fontStyle": "normal",
              "fontWeight": "500",
              "src": [
                "file:./assets/fonts/inter/Inter-Medium.woff2"
              ]
            },
            {
              "fontFamily": "Inter",
              "fontStretch": "",
              "fontStyle": "normal",
              "fontWeight": "600",
              "src": [
                "file:./assets/fonts/inter/Inter-SemiBold.woff2"
              ]
            },
            {
              "fontFamily": "Inter",
              "fontStretch": "",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/inter/Inter-Bold.woff2"
              ]
            }
          ],
          "fontFamily": "\"Inter\", sans-serif",
          "name": "Inter",
          "slug": "body"
        }
      ],
      "fontSizes": [
        {
          "name": "Extra Small",
          "size": "13px",
          "slug": "x-small"
        },
        {
          "name": "Small",
          "size": "clamp(14px, 1.6vw, 16px)",
          "slug": "small",
          "fluid": {
            "min": "14px",
            "max": "16px"
          }
        },
        {
          "name": "Regular",
          "size": "clamp(16px, 1.8vw, 18px)",
          "slug": "regular",
          "fluid": {
            "min": "16px",
            "max": "18px"
          }
        },
        {
          "name": "Medium",
          "size": "22px",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "clamp(24px, 3vw, 28px)",
          "slug": "large",
          "fluid": {
            "min": "24px",
            "max": "28px"
          }
        },
        {
          "name": "Extra Large",
          "size": "clamp(32px, 3.6vw, 36px)",
          "slug": "x-large",
          "fluid": {
            "min": "32px",
            "max": "36px"
          }
        },
        {
          "name": "Huge",
          "size": "clamp(40px, 3.6vw, 44px)",
          "slug": "huge",
          "fluid": {
            "min": "40px",
            "max": "44px"
          }
        },
        {
          "name": "Extra Huge",
          "size": "clamp(48px, 6.6vw, 56px)",
          "slug": "x-huge",
          "fluid": {
            "min": "48px",
            "max": "56px"
          }
        }
      ]
    },
    "layout": {
      "contentSize": "min(calc(100dvw - var(--wp--preset--spacing--md,2rem)), 800px)",
      "wideSize": "min(calc(100dvw - var(--wp--preset--spacing--md,2rem)), 1200px)"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--body)"
    },
    "typography": {
      "fontSize": "var(--wp--preset--font-size--regular)",
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--foreground)"
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "button": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "500",
          "lineHeight": "1.5em"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
        "spacing": {
          "padding": {
            "top": "0.5em",
            "right": "1em",
            "bottom": "0.5em",
            "left": "1em"
          }
        },
        "border": {
          "radius": "0.375em",
          "color": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--secondary)"
          }
        }
			},
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-huge)",
          "fontWeight": "500",
          "lineHeight": "1.2",
          "letterSpacing": "-2px"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontWeight": "500",
          "lineHeight": "1.2",
          "letterSpacing": "-1px"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "500",
          "lineHeight": "1.3",
          "letterSpacing": "-0.5px"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600",
          "lineHeight": "1.3",
          "letterSpacing": "-0.25px"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600",
          "lineHeight": "1.45"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)",
          "fontWeight": "600",
          "lineHeight": "1.45"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
			"name": "sidebar",
			"title": "Sidebar",
			"area": "uncategorized"
		}
  ]
}